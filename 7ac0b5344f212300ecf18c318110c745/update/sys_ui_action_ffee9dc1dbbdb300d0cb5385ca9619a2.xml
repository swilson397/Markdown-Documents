        <name>Rebuild HTML</name>
        <onclick>refreshHTML()</onclick>
        <order>-200</order>
        <script><![CDATA[function refreshHTML() {
    g_form.hideFieldMsg('html', true);
    if (typeof markdownDocument == "undefined") {
        alert("No markdown document editor found.");
        return;
    }
    var mde = markdownDocument.getEasyMDE(g_form.getUniqueValue());
    var mdText = mde.value();
    var sourceHTML = mde.options.previewRender(mdText);

    var styleSheetIds = g_scratchpad.style_sheet_ids.split(",");
    var cssHdrText = '<header>';
    styleSheetIds.forEach(function(id) {
        cssHdrText += '\n<link href="' + id + '.cssdbx" rel="stylesheet" type="text/css"></link>';
    }, this);
    cssHdrText += '\n</header>';

    g_form.setValue("html", cssHdrText + "\n<div class='content'>\n" + sourceHTML + "\n</div>");
    g_form.addInfoMessage('HTML refreshed from markdown text');
    g_tabs2Sections.setActive(2);
}]]></script>
