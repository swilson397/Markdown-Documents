        <xml><![CDATA[<?xml version="1.0" encoding="utf-8" ?>
<j:jelly trim="false" xmlns:j="jelly:core" xmlns:g="glide" xmlns:j2="null" xmlns:g2="null">
   	<div id="show_markdown_div" class=" col-xs-12 col-md-1_5 col-lg-2 control-label" style="display: block">                
		<a style="font-size: larger" onclick="toggleMarkdown()">Show Markdown/HTML tabs</a>
    </div>
   	<div id="hide_markdown_div" class=" col-xs-12 col-md-1_5 col-lg-2 control-label"  style="display: none">                
		<a style="font-size: larger" onclick="toggleMarkdown()">Hide Markdown/HTML tabs</a>
    </div>
	<script>
		function toggleMarkdown() {
		  if (g_form.isSectionVisible("markdown")) {
		     g_form.setSectionDisplay("markdown", false);
		     g_form.setSectionDisplay("html", false);
		     jQuery("#show_markdown_div").show();
		     jQuery("#hide_markdown_div").hide();
		  } else {
		     g_form.setSectionDisplay("markdown", true);
		     g_form.setSectionDisplay("html", true);
	         g_tabs2Sections.setActive(1);
             var hdrMDE = markdownDocument.getEasyMDE(g_form.getUniqueValue());
             if (!hdrMDE) {
               alert("ERROR Markdown Document controller not found");
               return;
             }
             hdrMDE.codemirror.refresh();
		     jQuery("#show_markdown_div").hide();
		     jQuery("#hide_markdown_div").show();
		  }
		}
	</script>
</j:jelly>]]></xml>
