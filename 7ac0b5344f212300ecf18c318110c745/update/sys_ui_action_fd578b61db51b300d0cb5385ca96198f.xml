        <script><![CDATA[function refreshHTML() {
	g_form.hideFieldMsg('text', true);
	if (typeof markdownDocument == "undefined") {
		alert("No markdown document editor found.");
		return;
	}
	var mdText = markdownDocument.getSimpleMDE().value();
	var sourceHTML = markdownDocument.getSimpleMDE().options.previewRender(mdText);
	var styleSheetIds = g_scratchpad.style_sheet_ids.split(",");
	var cssHdrText = '<header>';
	styleSheetIds.forEach(function(id) {
		cssHdrText += '<link href="' + id + '.cssdbx" rel="stylesheet" type="text/css"></link>';
	}, this);
	cssHdrText += '</header>';
	g_form.setValue("text", cssHdrText + sourceHTML);
	g_form.showFieldMsg('text','HTML refreshed from markdown editor text','info' ,true );
}]]></script>
