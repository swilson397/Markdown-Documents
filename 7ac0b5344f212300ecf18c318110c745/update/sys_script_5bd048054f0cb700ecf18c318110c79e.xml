        <script><![CDATA[/**
 * This business rule will set the source name on the Markdown Source record
 *
 * @param {GlideRecord} current
 * @param {GlideRecord} previous This parameter is null if it runs async
 * @returns {void}
 */
(function executeRule(current, previous /*null when async*/) {
	if (current.source_type == "Document" && (current.source_id.changes() || current.source_name.nil())) {
		current.source_name = current.source_id.getDisplayValue();
	}
	if (current.source_name.changes() || current.markdown_link.nil()) {
		var link = current.source_name.toString().toLowerCase();
		link = link.replace(/[^\w\- ]/g, '');
		current.markdown_link = link.replace(/ /g, "-");
	}	
})(current, previous);]]></script>
